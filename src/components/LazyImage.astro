---
interface Props {
  src: string;
  alt: string;
  class?: string;
  width?: number;
  height?: number;
  loading?: "lazy" | "eager";
}

const { src, alt, class: className = "", width, height, loading = "lazy" } = Astro.props;
---

{
  loading === "lazy" ? (
    <img
      data-src={src}
      alt={alt}
      class={`${className} lazy-image`}
      width={width}
      height={height}
    />
  ) : (
    <img
      src={src}
      alt={alt}
      class={className}
      width={width}
      height={height}
      loading="eager"
    />
  )
}

<style>
  :global(.lazy-image) {
    transition: opacity 0.4s ease-in-out;
  }

  :global(.lazy-image[data-src]) {
    opacity: 0.8;
  }

  :global(.lazy-image:not([data-src])) {
    opacity: 1;
  }
</style>
