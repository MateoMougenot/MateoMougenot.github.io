  <style>
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    @keyframes fadeInLeft {
      from { opacity: 0; transform: translateX(-40px); }
      to { opacity: 1; transform: translateX(0); }
    }
    @keyframes fadeInRight {
      from { opacity: 0; transform: translateX(40px); }
      to { opacity: 1; transform: translateX(0); }
    }

    /* États initiaux - éléments cachés */
    [data-animate-target] {
      opacity: 0;
    }
    [data-animate-target="fade-up"] {
      transform: translateY(30px);
    }
    [data-animate-target="fade-left"] {
      transform: translateX(-40px);
    }
    [data-animate-target="fade-right"] {
      transform: translateX(40px);
    }

    /* Classes d'animation */
    .fade-up {
      animation: fadeInUp 0.8s ease-out both;
    }
    .fade-left {
      animation: fadeInLeft 0.8s ease-out both;
    }
    .fade-right {
      animation: fadeInRight 0.8s ease-out both;
    }
  </style>

  <script>
    const section = document.querySelector('#apropos');
    
    const animateSection = () => {
      if (section.dataset.animate === 'true') return;
      
      section.dataset.animate = 'true';
      
      // Animer le titre
      const title = section.querySelector('[data-animate-target="fade-up"]');
      if (title) title.classList.add('fade-up');
      
      // Animer la section gauche
      const left = section.querySelector('[data-animate-target="fade-left"]');
      if (left) left.classList.add('fade-left');
      
      // Animer la section droite
      const right = section.querySelector('[data-animate-target="fade-right"]');
      if (right) right.classList.add('fade-right');
    };
    
    // Utiliser Intersection Observer pour déclencher l'animation en mobile et desktop
    if (section) {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              animateSection();
              observer.unobserve(section);
            }
          });
        },
        { threshold: 0.1 }
      );
      
      observer.observe(section);
    }
    
    // Garder mouseenter pour une expérience desktop améliorée
    section?.addEventListener('mouseenter', animateSection);
  </script>
</section>
